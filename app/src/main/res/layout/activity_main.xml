<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorDark"
    tools:context="com.byids.hy.smarttable.MainActivity">

<LinearLayout
    android:layout_margin="50dp"
    android:id="@+id/linear_title"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_time"
        android:text="15:32"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvvvv"
        android:gravity="center"
        android:background="@color/colorText"
        android:layout_width="1dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_week"
            android:text="星期三"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_date"
            android:text="2016.7.16"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

<RelativeLayout
    android:layout_weight="1"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_temp"
        android:src="@mipmap/temp_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/linear_temp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_toRightOf="@id/iv_temp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_weather"
            android:text="武汉:多云转晴"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_temp"
            android:text="18-24℃"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>


    <TextView
        android:drawableLeft="@mipmap/humidity_icon"
        android:drawablePadding="-80dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/tv_humidity"
        android:text="湿度: 80%"
        android:textColor="@color/colorText"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/tv_pm"
        android:text="PM2.5:70"
        android:textColor="@color/colorText"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>


    <HorizontalScrollView
        android:layout_marginTop="60dp"
        android:id="@+id/scroll"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@mipmap/room_icon"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_keting"
                android:onClick="click"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="客 厅"
                android:textSize="30dp"
                android:clickable="true"
                android:textColor="@color/colorText"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/colorText"
                android:layout_width="1dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_woshi"
                android:onClick="click"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="卧 室"
                android:textSize="30dp"
                android:textColor="@color/colorText"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/colorText"
                android:layout_width="1dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_ertongfang"
                android:onClick="click"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:text="儿 童 房"
                android:textSize="30dp"
                android:textColor="@color/colorText"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linear_list"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@id/linear_title"
        android:layout_above="@id/scroll"
        android:layout_width="500dp"
        android:background="@drawable/background"
        android:layout_height="600dp">

        <ImageView
            android:id="@+id/iv_up"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="upORDown"
            android:src="@mipmap/push_up_icon"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/lv_model"
            android:layout_weight="1"
            android:scrollbars="none"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_down"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="upORDown"
            android:src="@mipmap/push_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.github.glomadrian.dashedcircularprogress.DashedCircularProgress
        android:id="@+id/size"
        custom:external_color="#1affffff"
        custom:base_color="@color/size_base"
        custom:min="0"
        custom:max="10"
        custom:progress_color="@color/colorPrimary"
        custom:duration="6000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:layout_width="400dp"
        android:layout_height="430dp">



        <Button
            android:id="@+id/restart"
            android:text=""
            android:background="#00ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_water_number"
            android:text="0℃"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.github.glomadrian.dashedcircularprogress.DashedCircularProgress>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cleaner_title"
            android:text="净化器"
            android:textSize="30sp"
            android:textColor="@color/colorText"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_cleaner_close"
            android:padding="20dp"
            android:src="@mipmap/close"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/iv_cleaner"
            android:gravity="center"
            android:text="风速"
            android:layout_weight="1"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:layout_weight="4"
            android:id="@+id/sb_cleaner"
            android:focusable="true"
            android:thumb="@drawable/thumb"
            android:maxHeight="4dp"
            android:minHeight="2dp"
            android:progressDrawable="@color/room_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_weight="1"
            android:id="@+id/cb_switch"
            android:gravity="center"
            android:text="开关"
            android:textColor="@color/room_color"
            android:textSize="25sp"
            android:drawableTop="@drawable/selecter_switch"
            android:drawablePadding="10dp"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/rg_cleaner"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_lizi"
                android:gravity="center"
                android:text="净离子"
                android:textColor="@color/room_color"
                android:textSize="25sp"
                android:drawableTop="@drawable/selecter_lizi"
                android:drawablePadding="10dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_auto"
                android:text="自动"
                android:textColor="@color/room_color"
                android:gravity="center"
                android:textSize="25sp"
                android:drawableTop="@drawable/selecter_auto"
                android:drawablePadding="10dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rb_sleep"
                android:text="睡眠"
                android:textColor="@color/room_color"
                android:gravity="center"
                android:textSize="25sp"
                android:drawableTop="@drawable/selecter_sleep"
                android:drawablePadding="10dp"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:background="@color/colorDark"
                android:layout_weight="1"
                android:id="@+id/rb_timer"
                android:text="制热"
                android:textColor="@color/room_color"
                android:gravity="center"
                android:textSize="25sp"
                android:button="@null"
                android:drawableTop="@drawable/selecter_timer"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>